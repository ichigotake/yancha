<html>
<head>
<meta charset="utf-8">
<script src="<: 'js/jqcloud-1.0.4.min.js' | static :>"></script>
<script>
$(function (){
  $.get('/api/tag', function (data){
    var max = 1000;
    for (var key in data) {
      if (max < data[key]) {
        max = data[key];
      }
    }
    var normalized = [];
    for (var key in data) {
      var weight = Math.round(data[key] / max * 20);
      normalized.push({ text: key, weight: weight });
    }
    $('#tagcloud').jQCloud(normalized);
  });
});
</script>
</head>
<body id="body">
<br />

 <div id="tagcloud" style="width: 550px; height: 350px;"></div>

</body>
</html>
